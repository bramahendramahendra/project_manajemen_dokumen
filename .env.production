NEXT_PUBLIC_API_URL=https://sipaduke.rembangkab.go.id/api
# NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_URL=https://sipaduke.rembangkab.go.id
# NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_PATH=
NEXT_PUBLIC_APP_KEY=SIPADUKE

# =============================================================
# TOKEN CONFIGURATION PRODUCTION
# =============================================================
# ‚ùå CRITICAL: Nilai ini HARUS sama dengan backend!
# Backend DEV: DEV_ACCESS_TOKEN_DURATION=2 menit

# Token Configuration (UNTUK TESTING - DALAM MENIT)
# Harus sama dengan backend config
# Durasi access token dalam menit
NEXT_PUBLIC_ACCESS_TOKEN_DURATION=15     # 2 menit (harus sama dengan PROD_ACCESS_TOKEN_DURATION di backend)
# Interval pengecekan refresh token dalam menit
NEXT_PUBLIC_REFRESH_TOKEN_DURATION=10080    # 5 menit (harus sama dengan PROD_REFRESH_TOKEN_DURATION di backend)

# Refresh Check Configuration
# Kapan mulai check untuk refresh (dalam % dari total durasi)
# Default: 0.5 = 50% dari durasi token (untuk 2 menit = 1 menit)
NEXT_PUBLIC_REFRESH_THRESHOLD=0.8
# Interval pengecekan refresh token (dalam menit)
# Semakin kecil interval, semakin sering check (tapi lebih banyak CPU usage)
# Untuk testing dengan 2 menit token: gunakan 0.5 menit (30 detik)
NEXT_PUBLIC_REFRESH_CHECK_INTERVAL=5

# =============================================================
# ENVIRONMENT SETTINGS
# =============================================================
NODE_ENV=production

# Debug mode (opsional)
NEXT_PUBLIC_DEBUG_MODE=false