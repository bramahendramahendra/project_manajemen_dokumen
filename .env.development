NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_BASE_PATH=
NEXT_PUBLIC_APP_KEY=SIPADUKE

# =============================================================
# TOKEN CONFIGURATION
# =============================================================
# ‚ùå CRITICAL: Nilai ini HARUS sama dengan backend!
# Backend DEV: DEV_ACCESS_TOKEN_DURATION=2 menit

# Token Configuration (UNTUK TESTING - DALAM MENIT)
# Harus sama dengan backend config
# Durasi access token dalam menit
NEXT_PUBLIC_ACCESS_TOKEN_DURATION=2     # 2 menit (harus sama dengan DEV_ACCESS_TOKEN_DURATION di backend)
# Interval pengecekan refresh token dalam menit
NEXT_PUBLIC_REFRESH_TOKEN_DURATION=5    # 5 menit (harus sama dengan DEV_REFRESH_TOKEN_DURATION di backend)

# Refresh Check Configuration
# Kapan mulai check untuk refresh (dalam % dari total durasi)
# Default: 0.5 = 50% dari durasi token (untuk 2 menit = 1 menit)
NEXT_PUBLIC_REFRESH_THRESHOLD=0.5
# Interval pengecekan refresh token (dalam menit)
# Semakin kecil interval, semakin sering check (tapi lebih banyak CPU usage)
# Untuk testing dengan 2 menit token: gunakan 0.5 menit (30 detik)
NEXT_PUBLIC_REFRESH_CHECK_INTERVAL=0.5

# =============================================================
# ENVIRONMENT SETTINGS
# =============================================================
NODE_ENV=development

# Debug mode (opsional)
NEXT_PUBLIC_DEBUG_MODE=true